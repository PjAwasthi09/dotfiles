# Wifi
# 
[wifi]
instance=wlp2s0
label=:
interval=20
#color=#cbc7d6


# Date/Time
#
[time]
label=
command=date '+ %D %I:%M'
interval=1


# Power Menu
#
[power-menu]
full_text=  
